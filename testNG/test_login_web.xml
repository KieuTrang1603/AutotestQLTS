<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Login Test">

    <listeners>
        <listener class-name="helpers.TestListener"/>
    </listeners>
    <test name="SingleUserLoginTest">
        <classes>
            <class name="tests.logins.LoginTestWeb"/>
        </classes>
    </test>

    <test name="MultiUserLoginTest" parallel="methods" thread-count="4">
        <classes>
            <class name="tests.logins.MultiUserLoginTest"/>
        </classes>
    </test>

    <test name="SecurityLoginTest">
        <classes>
            <class name="tests.logins.LoginSecurityTest"/>
        </classes>
    </test>
</suite>